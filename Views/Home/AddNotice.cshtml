@model Student_Activity_Management_System.Models.Notice

@{
    ViewBag.Title = "Add Notice";
}

<style>
    .custom-form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background: #f7f7f7;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

        .custom-form .form-group {
            margin-bottom: 20px;
        }

        .custom-form label {
            font-weight: bold;
        }

        .custom-form .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .custom-form .btn-primary {
            display: block;
            width: 100%;
            padding: 10px;
            background: #007bff;
            color: #fff;
            border: none;
            border-radius: 3px;
        }

            .custom-form .btn-primary:hover {
                background: #0056b3;
            }

        .custom-form .alert {
            margin-top: 20px;
        }
</style>

<div class="custom-form">
    <h2>Add Notice</h2>

    @using (Html.BeginForm("AddNotice", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Title)
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content)
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 4 })
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <button type="submit" class="btn-primary">Add Notice</button>
    }

    <div>
        @if (ViewBag.Notification != null)
        {
            <div class="alert alert-success">@ViewBag.Notification</div>
        }
    </div>
</div>
