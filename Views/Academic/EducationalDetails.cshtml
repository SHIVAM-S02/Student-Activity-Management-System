@model Student_Activity_Management_System.Models.EducationalDetail

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles for your form */
        .box {
            display: inline-block;
            padding: 15px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            height:50px;
            width:185px;
        }

            .box:hover {
                background-color: #0056B3;
            }

        .form-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background: #f7f7f7;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }

            .form-container h3 {
                font-weight: bold;
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .box-container {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007BFF;
            color: white;
            text-align: center;
            border: none;
            border-radius: 3px;
        }

            .box-container:hover {
                background-color: #0056B3;
            }

        /* Additional styles for file input */
        input[type="file"] {
            display: none; /* Hide the default file input */
        }

        .custom-file-upload {
            cursor: pointer;
            padding: 10px;
            background-color: #007BFF;
            color: white;
            text-align: center;
            border: none;
            border-radius: 3px;
        }

            .custom-file-upload:hover {
                background-color: #0056B3;
            }
    </style>
</head>

<a href="@Url.Action("ViewEducationalDetails", "Academic")" class="box">
    <h3>View Data</h3>
</a>

@using (Html.BeginForm("EducationalDetails", "Academic", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div class="form-container">
        <h3>Upload Educational Details</h3>

        <div class="form-group">
            @Html.LabelFor(model => model.YearOfPassing)
            @Html.EditorFor(model => model.YearOfPassing, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.YearOfPassing)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Degree)
            @Html.EditorFor(model => model.Degree, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Degree)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Board)
            @Html.EditorFor(model => model.Board, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Board)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Percentage)
            @Html.EditorFor(model => model.Percentage, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Percentage)
        </div>

        <div class="form-group">
            <label for="FileUpload" class="custom-file-upload">Choose File</label>
            <input type="file" id="FileUpload" name="FileUpload" />
        </div>

        <div>
            <input class="box-container" type="submit" value="Upload" />
        </div>
    </div>
}
