@model Student_Activity_Management_System.Models.User


@{
    ViewBag.Title = "StudentProfile";

}


<!DOCTYPE html>
<html>
<head>
    <title>Student Profile</title>
    <link rel="stylesheet" href="~/Content/Style Sheet/StudentDashboard.css" />

</head>
<body>
    <h1>Student Profile</h1>
    <p><strong>User ID:</strong> @Model.User_ID</p>
    <p><strong>First Name:</strong> @Model.First_Name</p>
    <p><strong>Last Name:</strong> @Model.Last_Name</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Batch Name:</strong> @Model.Batch_Name</p>


    <!-- Student Profile -->
    <div class="student-profile py-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent text-center">
                            <img class="profile_img" src="~/Content/Images/LOGO.png" alt="">
                            <p class="mb-0"><strong class="pr-1">NAME:</strong>@Model.First_Name + @Model.Last_Name</p>
                            <h3>Ishmam Ahasan Samin</h3>
                        </div>
                        <div class="card-body">
                            <p class="mb-0"><strong class="pr-1">Student ID:</strong>@Model.User_ID</p>
                            <p class="mb-0"><strong class="pr-1">Gender:</strong>@Model.Gender</p>
                            <p class="mb-0"><strong class="pr-1">Email:</strong>@Model.Email</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
                        </div>
                        <div class="card-body pt-0">
                            <table class="table table-bordered">
                                <tr>
                                    <th width="30%">Roll</th>
                                    <td width="2%">:</td>
                                    <td>@Model.Last_Name</td>
                                </tr>
                                <tr>
                                    <th width="30%">Academic Year	</th>
                                    <td width="2%">:</td>
                                    <td>2020</td>
                                </tr>
                                <tr>
                                    <th width="30%">Gender</th>
                                    <td width="2%">:</td>
                                    <td>Male</td>
                                </tr>
                                <tr>
                                    <th width="30%">Religion</th>
                                    <td width="2%">:</td>
                                    <td>Group</td>
                                </tr>
                                <tr>
                                    <th width="30%">blood</th>
                                    <td width="2%">:</td>
                                    <td>B+</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- You can add more fields as needed -->

    <a href="@Url.Action("Index", "Home")">Back to Home</a>
</body>
</html>
