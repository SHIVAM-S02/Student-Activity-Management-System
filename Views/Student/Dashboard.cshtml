        /* Style the dropdown container */
        .dropdown {
            position: relative;
            display: inline-block;
        }

            /* Style the "Courses" link */
            .dropdown .box {
                text-decoration: none;
                color: #333;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                background-color: #f9f9f9;
                cursor: pointer;
            }

        /* Style the dropdown content */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #fff;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            /* Style the course links */
            .dropdown-content a {
                color: #333;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                /* Change the color of course links on hover */
                .dropdown-content a:hover {
                    background-color: #f2f2f2;
                }

        /* Show the dropdown content when hovering over the "Courses" link */
        .dropdown:hover .dropdown-content {
            display: block;
        }

        /* Optionally, you can style the arrow ▼ */
        .dropdown .box::after {
            content: '\25BC'; /* Unicode character for ▼ */
            margin-left: 5px;
        }
    </style>

</head>
